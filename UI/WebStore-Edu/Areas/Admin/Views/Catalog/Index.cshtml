@model IEnumerable<WebStore_Edu.Domain.ViewModels.ProductViewModel>

@{
    ViewBag.Title = "Управление каталогом товаров";
}

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>@Html.DisplayNameFor(m => m.Id)</th>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>@Html.DisplayNameFor(m => m.Brand)</th>
            <th>@Html.DisplayNameFor(m => m.Section)</th>
            <th>@Html.DisplayNameFor(m => m.ImageUrl)</th>
            <th>@Html.DisplayNameFor(m => m.Price)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    <a asp-action="Edit" asp-route-Id="@product.Id" class="fa fa-edit">Редактировать</a>
                </td>
                <td>@Html.DisplayFor(_ => product.Id)</td>
                <td>@Html.DisplayFor(_ => product.Name)</td>
                <td>@Html.DisplayFor(_ => product.Brand)</td>
                <td>@Html.DisplayFor(_ => product.Section)</td>
                <td>
                    <img src="~/images/shop/@product.ImageUrl" width="80" alt="@product.Name" />
                </td>
                <td>@Html.DisplayFor(_ => product.Price)</td>
                <td>
                    <form class="text-danger fa fa-trash-o" asp-action="Delete" asp-route-Id="@product.Id">
                        <input type="submit" value="Удалить" class="btn btn-sm btn-danger"/>
                    </form>
                </td>
            </tr>
        }
    </tbody>

</table>