@model IEnumerable<WebStore_Edu.Domain.ViewModels.BrandViewModel>

<div class="brands_products">
    <!--brands_products-->
    <h2>Бренды</h2>
    <div class="brands-name">
        <ul class="nav nav-pills nav-stacked">
            @foreach (var brand in Model)
            {
                <li @(Context.Request.Query["BrandId"] == brand.Id.ToString() ? "class=active" : null)>
                    <a asp-controller="Shop" asp-action="Index" asp-route-BrandId="@brand.Id"> <span class="pull-right">(@brand.ProductsCount)</span>@brand.Name</a>
                </li>
            }
        </ul>
    </div>
</div><!--/brands_products-->