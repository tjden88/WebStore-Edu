@model RegisterUserViewModel

<h2>Регистрация нового пользователя</h2>
<div class="signup-form">
    <!--sign up form-->
    <form asp-action="Register" asp-controller="Account">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <span asp-validation-for="UserName" class="text-danger"></span>
        <input asp-for="UserName" placeholder="Логин" />

        <span asp-validation-for="Password" class="text-danger"></span>
        <input asp-for="Password" placeholder="Пароль" />

        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        <input asp-for="ConfirmPassword" placeholder="Подтверждение пароля" />

        <button type="submit" class="btn btn-default">Зарегистрироваться</button>
    </form>
</div>
