@model LoginUserViewModel

<h2>Вход в аккаунт</h2>
<div class="login-form">
    <!--login form-->

    <form asp-action="Login" asp-controller="Account">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <span asp-validation-for="UserName" class="text-danger"></span>
        <input asp-for="UserName" placeholder="Логин" />

        <span asp-validation-for="Password" class="text-danger"></span>
        <input asp-for="Password" placeholder="Пароль" />

        <span>
            <input asp-for="Remember" class="checkbox">
            Запомнить меня
        </span>
        
        <input asp-for="RedirectUrl" class="hidden"/>
        <button type="submit" class="btn btn-default">Вход</button>
    </form>
</div>