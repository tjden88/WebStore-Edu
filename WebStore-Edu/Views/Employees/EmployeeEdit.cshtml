@model EmployeeViewModel

@{
    ViewData["Title"] = "Редактирование сотрудника";
}

<div class="container">

    <h4>Сотрудник @Model.FirstName</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EmployeeEdit" asp-route-id="@Model.Id">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="FirstName" class="control-label">Имя</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label">Фамилия</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Patronymic" class="control-label">Отчество</label>
                    <input asp-for="Patronymic" class="form-control" />
                    <span asp-validation-for="Patronymic" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Position" class="control-label">Должность</label>
                    <input asp-for="Position" class="form-control" />
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Birthday" class="control-label">Дата рождения</label>
                    <input asp-for="Birthday" class="form-control" />
                    <span asp-validation-for="Birthday" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <a class="btn-sm btn-danger" asp-route-id="@Model.Id" asp-action="DeleteQuestion">Удалить сотрудника</a>

    <hr />
    <a asp-action="Index">Назад к списку</a>

</div>

